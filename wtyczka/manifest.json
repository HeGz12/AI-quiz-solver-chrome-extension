{
  "manifest_version": 3,
  "name": "AI Test Solver",
  "version": "1.1",
  "description": "Wykrywa pytania i odpowiedzi, analizuje je za pomocą AI i zaznacza prawidłową odpowiedź.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}